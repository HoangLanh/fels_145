<h2><%= @category.name %></h2>
<div class="panel panel-heading">
  <%= link_to t(".add_word"), new_admin_category_word_path(@category),
    class: "btn btn-primary" %>
</div>
<div class="panel panel-body">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t ".words" %></th>
        <th><%= t ".actions" %></th>
      </tr>
    </thead>
    <tbody>
      <% @category.words.each do |word| %>
        <tr>
          <td><%= word.content %></td>
          <td>
            <%= link_to t(".edit"), edit_admin_category_word_path(@category, word) %>
            <%= link_to t(".delete"), [:admin, @category, word], method: :delete,
              data: {confirm: t("views.categories.show.confirm_delete")} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
