<%= provide :title, t("views.sessions.new.login") %>

<h1 style="color:red"><%= t "views.sessions.new.login" %></h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>
      <br>
      <%= f.submit t("views.sessions.new.login"),
        class: "btn btn-primary" %>
    <% end %>
    <p><% t "views.sessions.newuser" %><%= link_to t("views.static_pages.home.signup"),
      login_path %>
    </p>
  </div>
</div>
